@page "/AddCollection"
@attribute [Authorize]
@using System.ComponentModel.DataAnnotations
<MudContainer Class="mt-3">
    <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator/>
    <MudGrid>
        <MudItem xs="12" sm="7">
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Collection Name" HelperText="Max. 8 characters"
                                  @bind-Value="model.Name" For="@(() => model.Name)"/>
                    <MudTextField Label="Description" HelperText="Add a good desciption for your collection" 
                                    @bind-Value="model.Description" For="@(() => model.Description)"/>
                    <MudNumericField  Label="Quantity" Variant="Variant.Text" Min="0" Max="1000" Class="mt-3"
                                @bind-Value="model.Quantity" For="@(() => model.Quantity)" />
                    <MudTextField Label="IPFS url" HelperText="Insert your image url here"
                                @bind-Value="model.CollectionImage" For="@(() => model.CollectionImage)"/>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Register</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="5">
            <MudPaper Class="pa-4 mud-height-full">
                <MudText Typo="Typo.subtitle2">Validation Summary</MudText>
                @if (success)
                {
                    <MudText Color="Color.Success">Success</MudText>
                }
                else
                {
                    <MudText Color="@Color.Error">
                        <ValidationSummary />
                    </MudText>
                }
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudText Typo="Typo.body2" Align="Align.Center">
                Fill out the form correctly to see the success message.
            </MudText>
        </MudItem>
    </MudGrid>
    </EditForm>
</MudContainer>
